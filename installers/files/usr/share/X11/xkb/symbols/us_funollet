default partial alphanumeric_keys
xkb_symbols "basic" {
    include "us(basic)"
    name[Group1]= "English (US, numbers layer)";

    key <AC10> {	[colon, semicolon, z, Z ]	};

    include "level3(ralt_switch)"
};





