# ~/.XCompose
# Add Compose key combinations tailored to write catalan.
# Defaults from 'us' keyboard are still available.

include "%L"
# Reads everything from /usr/share/X11/locale/en_US.UTF-8/Compose

### default compose keys
#
# €     e =         euro
# ·     . -         periodcentered
# ç     c ,         ccedilla
# ñ     n ~

<Multi_key> <c> <c>                     : "ç"
<Multi_key> <C> <C>                     : "Ç"
<Multi_key> <l> <l>                     : "·"
<Multi_key> <e> <e>                     : "€"
<Multi_key> <i> <i>                     : "ï"
<Multi_key> <I> <I>                     : "Ï"
<Multi_key> <u> <u>                     : "ü"
<Multi_key> <U> <U>                     : "Ü"
<Multi_key> <n> <n>                     : "ñ"
<Multi_key> <N> <N>                     : "Ñ"


# Default compose keys for accents.
#
# à     a `
# ü     " u
# á     a '
#
# Compose all accented vowels with keys ',' and '.'

<Multi_key> <a> <a>                : "à"
<Multi_key> <a> <e>                : "è"
<Multi_key> <a> <o>                : "ò"

<Multi_key> <a> <A>                : "À"
<Multi_key> <a> <E>                : "È"
<Multi_key> <a> <O>                : "Ò"

<Multi_key> <a> <A>                : "À"
<Multi_key> <A> <A>                : "À"
<Multi_key> <A> <E>                : "È"
<Multi_key> <A> <O>                : "Ò"


<Multi_key> <f> <a>                : "á"
<Multi_key> <f> <e>                : "é"
<Multi_key> <f> <i>                : "í"
<Multi_key> <f> <o>                : "ó"
<Multi_key> <f> <u>                : "ú"

<Multi_key> <f> <A>                : "Á"
<Multi_key> <f> <E>                : "É"
<Multi_key> <f> <I>                : "Í"
<Multi_key> <f> <O>                : "Ó"
<Multi_key> <f> <U>                : "Ú"

<Multi_key> <F> <A>                : "Á"
<Multi_key> <F> <E>                : "É"
<Multi_key> <F> <I>                : "Í"
<Multi_key> <F> <O>                : "Ó"
<Multi_key> <F> <U>                : "Ú"
